$("#js-comment-textarea-<%= @comment.status.id %>").val("");
$("#js-comment-container-<%= @comment.status_id %>").append("<%=j render('comment', comment: @comment) %>");
$("#js-recent-activities").prepend("<%=j render('public_activity/status/commented', activity: @activity) %>");
